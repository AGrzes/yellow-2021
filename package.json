{
  "name": "@agrzes/yellow-2021-root",
  "private": true,
  "dependencies": {
    "lerna": "^3.22.1"
  },
  "workspaces": {
    "packages": [
      "modules/**"
    ]
  },
  "scripts": {
    "build": "lerna run build",
    "watch": "lerna run watch --stream --parallel",
    "test": "lerna run test",
    "compose:up": "cd local && docker-compose up -d",
    "compose:clear-up": "cd local && docker-compose up -d -V",
    "compose:down": "cd local && docker-compose down",
    "compose:stop": "cd local && docker-compose stop",
    "compose:start": "cd local && docker-compose start"
  },
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/chai-as-promised": "^7.1.3",
    "@types/mocha": "^8.2.0",
    "@types/sinon": "^9.0.10",
    "@types/sinon-chai": "^3.2.5",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.11.1",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^7.16.0",
    "mocha": "^8.2.1",
    "nyc": "^15.1.0",
    "sinon": "^9.2.2",
    "sinon-chai": "^3.5.0",
    "source-map-support": "^0.5.19",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
